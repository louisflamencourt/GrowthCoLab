{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Gross Fixed Capital Formation (GFCF) by Sector - United Kingdom",
    "subtitle": ["in Â£ billion (current prices)"],
    "color": "#122b39E6",
    "subtitleColor": "#676A86",
    "anchor": "start",
    "dx": 24,
    "fontSize": 14,
    "subtitleFontSize": 12,
    "subtitlePadding": 4,
    "offset": 0
  },
  "width": 450,
  "height": 300,
  "config": {
    "font": "Circular Std Book",
    "line": {"interpolate": "linear"},
    "view": {"stroke": "transparent", "continuousWidth": 400, "continuousHeight": 300},
    "range": {
      "category": [
        "#001f3f",
        "#4269d0",
        "#efb118",
        "#ff725c",
        "#6cc5b0",
        "#3ca951",
        "#ff8ab7"
      ]
    },
    "axisX": {
      "labelColor": "#122b39",
      "tickColor": "#122b39",
      "domainColor": "#122b39",
      "domainOpacity": 0.5,
      "gridOpacity": 0,
      "labelFont": "Circular Std Book",
      "labelAngle": 0,
      "labelAlign": "center",
      "labelFontSize": 11,
      "labelPadding": 5,
      "tickCount": 10,
      "tickSize": 0,
      "title": ""
    },
    "axisY": {
      "labelColor": "#122b39",
      "labelFont": "Circular Std Book",
      "tickColor": "#122b39",
      "domainColor": "#122b39",
      "gridColor": "#122b39",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "labelPadding": 5,
      "labelFontSize": 11,
      "domainOpacity": 0.5,
      "tickSize": 0,
      "title": null,
      "titleAlign": "left",
      "titleAngle": 0,
      "titleBaseline": "bottom",
      "titleColor": "#122b39",
      "titleOpacity": 0.9,
      "titleX": 0,
      "titleY": -7
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/louisflamencourt/GrowthCoLab/refs/heads/main/GFCF_sectors.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": "datum.Sector != 'Dwellings (excl. land)'"
    }
  ],
  "layer": [
    {
      "mark": {"type": "line"},
      "encoding": {
        "x": {"field": "Year", "type": "temporal", "title": ""},
        "y": {"field": "Value", "type": "quantitative",
        "title": "",
        "scale": {"domain": [0, 65]}
        },
        "color": {
          "field": "Sector",
          "type": "nominal",
          "legend": null,
          "scale": {
            "domain": [
              "Dwellings (excl. land)",
              "Buildings and infrastructure",
              "Transport equipment",
              "Information communication technology",
              "Intellectual property products",
              "Ownership costs of non-produced assets",
              "Total Gross fixed capital formation"
            ],
            "range": [
              "#001f3f",
              "#4269d0",
              "#efb118",
              "#ff725c",
              "#6cc5b0",
              "#3ca951",
              "#ff8ab7"
            ]
          }
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": {
          "expr": "{'Intellectual property products': -7, 'Information communication technology': -7, \"Transport equipment\": -10, \"Buildings and infrastructure\": 2, \"Ownership costs of non-produced assets\": -7, \"Dwellings (excl. land)\": 1}[datum.Sector]"
        }
      },
      "encoding": {
        "x": {"field": "Year", "type": "temporal"},
        "y": {"field": "Value", "type": "quantitative"},
        "text": {"field": "Sector", "type": "nominal"},
        "color": {
          "field": "Sector",
          "type": "nominal"
        }
      },
      "transform": [
        {"filter": "datum.Year == 1672531200000"}
      ]
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": {
          "expr": "{'Intellectual property products': 3, 'Information communication technology': 3, \"Transport equipment\": -1, \"Buildings and infrastructure\": 11, \"Ownership costs of non-produced assets\": 2, \"Dwellings (excl. land)\": 10}[datum.Sector]"
        }
      },
      "encoding": {
        "x": {"field": "Year", "type": "temporal"},
        "y": {"field": "Value", "type": "quantitative"},
        "text": {"field": "Value", "type": "quantitative"},
        "color": {
          "field": "Sector",
          "type": "nominal"
        }
      },
      "transform": [
        {"filter": "datum.Year == 1672531200000"}
      ]
    }
  ]
}
