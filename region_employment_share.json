{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Financial and insurance sector employment as a share of total employment (2024)",
    "subtitle": ["in %"],
    "color": "#122b39E6",
    "subtitleColor": "#676A86",
    "anchor": "start",
    "dx": 24,
    "fontSize": 14,
    "subtitleFontSize": 12,
    "subtitlePadding": 4,
    "offset": 0
  },
  "width": 450,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/map-data/refs/heads/main/gbr/ITL1_UK_2021.json",
    "format": {
      "type": "topojson",
      "feature": "geog"
    }
  },
  "transform": [
    {
      "lookup": "properties.ITL121NM",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/louisflamencourt/GrowthCoLab/refs/heads/main/region_employment_share.csv",
          "format": {
            "type": "csv"
          }
        },
        "key": "Region",
        "fields": ["Value"]
      }
    }
  ],
  "projection": {
    "type": "mercator"
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Value",
          "type": "quantitative",
          "scale": {"scheme": "blues"}
        },
        "tooltip": [
          {"field": "properties.ITL121NM", "type": "nominal", "title": "Region"},
          {"field": "Value", "type": "quantitative", "title": "Financial Sector Size"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "black",
        "fontSize": 12,
        "fontWeight": "bold",
        "dx": 340,
        "dy": 260
      },
      "encoding": {
        "text": {"field": "Value", "type": "quantitative"},
        "longitude": {"field": "properties.longitude", "type": "quantitative"},
        "latitude": {"field": "properties.latitude", "type": "quantitative"}
      },
      "transform": [
        {"filter": "datum.properties.ITL121NM === 'London'"}
      ]
    }
  ],
  "config": {
    "font": "Circular Std Book",
    "mark": {"line": {"interpolate": "linear"}},
    "view": {"stroke": "transparent", "width": 400, "height": 300},
    "range": {},
    "axisX": {
      "labelColor": "#122b39",
      "tickColor": "#122b39",
      "domainColor": "#122b39",
      "domainOpacity": 0.5,
      "gridOpacity": 0,
      "labelFont": "Circular Std Book",
      "labelAngle": 0,
      "labelAlign": "center",
      "labelFontSize": 11,
      "labelPadding": 5,
      "tickCount": 10,
      "tickSize": 0,
      "title": ""
    },
    "axisY": {
      "labelColor": "#122b39",
      "labelFont": "Circular Std Book",
      "tickColor": "#122b39",
      "domainColor": "#122b39",
      "gridColor": "#122b39",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "labelPadding": 5,
      "labelFontSize": 11,
      "domainOpacity": 0.5,
      "tickSize": 0,
      "titleAlign": "left",
      "titleAngle": 0,
      "titleBaseline": "bottom",
      "titleColor": "#122b39",
      "titleOpacity": 0.9,
      "titleX": 0,
      "titleY": -7
    }
  }
}
