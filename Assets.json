{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Net Acquisition of Financial Assets",
    "subtitle": ["in Â£ billion (current prices)"],
    "color": "#122b39E6",
    "subtitleColor": "#676A86",
    "anchor": "start",
    "dx": 24,
    "fontSize": 14,
    "subtitleFontSize": 12,
    "subtitlePadding": 4,
    "offset": 0
  },
  "width": 450,
  "height": 300,
  "config": {
    "font": "Circular Std Book",
    "line": {"interpolate": "linear"},
    "view": {"stroke": "transparent", "continuousWidth": 400, "continuousHeight": 300},
    "range": {
      "category": [
        "#4269d0",
        "#ff725c",
      ]
    },
    "axisX": {
      "labelColor": "#122b39",
      "tickColor": "#122b39",
      "domainColor": "#122b39",
      "domainOpacity": 0.5,
      "gridOpacity": 0,
      "labelFont": "Circular Std Book",
      "labelAngle": 0,
      "labelAlign": "center",
      "labelFontSize": 11,
      "labelPadding": 5,
      "tickCount": 10,
      "tickSize": 0,
      "title": ""
    },
    "axisY": {
      "labelColor": "#122b39",
      "labelFont": "Circular Std Book",
      "tickColor": "#122b39",
      "domainColor": "#122b39",
      "gridColor": "#122b39",
      "gridDash": [1, 5],
      "gridOpacity": 0.5,
      "labelPadding": 5,
      "labelFontSize": 11,
      "domainOpacity": 0.5,
      "tickSize": 0,
      "title": null,
      "titleAlign": "left",
      "titleAngle": 0,
      "titleBaseline": "bottom",
      "titleColor": "#122b39",
      "titleOpacity": 0.9,
      "titleX": 0,
      "titleY": -7
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/louisflamencourt/GrowthCoLab/refs/heads/main/Assets.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": "datum.Type != ''"
    }
  ],
  "layer": [
    {
      "mark": {"type": "line"},
      "encoding": {
        "x": {"field": "Year", "type": "temporal", "title": ""},
        "y": {"field": "Value", "type": "quantitative", "title": "", "scale": {"domain": [-600, 1000]}},
        "color": {
          "field": "Type",
          "type": "nominal",
          "legend": null
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": {
          "expr": "{'Net acquisition of UK financial assets': -7, 'Net acquisition of rest of the world financial assets': -7}[datum.Type]"
        }
      },
      "encoding": {
        "x": {"field": "Year", "type": "temporal"},
        "y": {"field": "Value", "type": "quantitative"},
        "text": {"field": "Type", "type": "nominal"},
        "color": {"field": "Type", "type": "nominal"}
      },
      "transform": [
        {"filter": "datum.Year == 1672531200000"}
      ]
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": {
          "expr": "{'Net acquisition of UK financial assets':5, 'Net acquisition of rest of the world financial assets': 5}[datum.Type]"
        }
      },
      "encoding": {
        "x": {"field": "Year", "type": "temporal"},
        "y": {"field": "Value", "type": "quantitative"},
        "text": {"field": "Value", "type": "quantitative"},
        "color": {"field": "Type", "type": "nominal"}
      },
      "transform": [
        {"filter": "datum.Year == 1672531200000"}
      ]
    }
  ]
}
